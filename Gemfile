source "https://rubygems.org"

# Jekyll version
gem "jekyll", "~> 4.3.3"

# Core plugins for GitHub Pages
group :jekyll_plugins do
  gem "jekyll-feed"
  gem "jekyll-seo-tag"
  gem "jekyll-sitemap"
  gem "jekyll-remote-theme"
  gem "jekyll-include-cache"
  gem "jekyll-multiple-languages-plugin"
  gem "jekyll-redirect-from"
  gem "jemoji"
  gem "jekyll-avatar"
  gem "jekyll-relative-links"
  gem "jekyll-mentions"
end

# Windows and JRuby
platforms :mingw, :x64_mingw, :mswin, :jruby do
  gem "tzinfo", ">= 1", "< 3"
  gem "tzinfo-data"
  gem "wdm", "~> 0.1.1"
end

# jekyll-sitemap dependency
gem "xml-parser", "~> 1.3"
